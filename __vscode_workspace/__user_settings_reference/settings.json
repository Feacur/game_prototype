// %appdata%/Code/User
{
	"terminal.integrated.defaultProfile.windows": "Command Prompt",
	"terminal.integrated.enablePersistentSessions": false,
	"terminal.integrated.shellIntegration.history": 0,
	"debug.console.historySuggestions": false,
	"search.quickOpen.includeHistory": false,
	"security.workspace.trust.enabled": false,
	"security.workspace.trust.untrustedFiles": "open",
	"files.refactoring.autoSave": false,
	"scm.autoReveal": false,
	"telemetry.telemetryLevel": "off",
	"window.restoreWindows": "none",
	// -- files
	"files.trimFinalNewlines": false,
	"files.trimTrailingWhitespace": false,
	// -- git
	"git.enabled": false,
	"git.mergeEditor": false,
	"git.autorefresh": false,
	"git.enableStatusBarSync": false,
	"git.detectSubmodules": false,
	"github.gitAuthentication": false,
	// -- workbench
	"workbench.startupEditor": "newUntitledFile",
	"workbench.sideBar.location": "right",
	"workbench.activityBar.visible": false,
	"workbench.editor.empty.hint": "hidden",
	"workbench.editor.restoreViewState": false,
	"workbench.commandPalette.history": 0,
	"workbench.colorTheme": "Gruvbox Dark Medium",
	"workbench.editor.preferHistoryBasedLanguageDetection": false,
	"workbench.editor.historyBasedLanguageDetection": false,
	"workbench.editor.focusRecentEditorAfterClose": false,
	"workbench.editor.autoLockGroups": {
		"terminalEditor": false
	},
	// -- editor
	"editor.wordWrap": "off",
	"editor.fontFamily": "JetBrains Mono",
	"editor.fontLigatures": false,
	"editor.fontSize": 14,
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"editor.lineNumbers": "relative",
	"editor.renderWhitespace": "all",
	"editor.minimap.enabled": false,
	"editor.scrollBeyondLastColumn": 5,
	"editor.scrollBeyondLastLine": true,
	"editor.autoClosingBrackets": "never",
	"editor.autoClosingQuotes": "never",
	"editor.autoClosingDelete": "never",
	"editor.autoClosingOvertype": "never",
	"editor.trimAutoWhitespace": true,
	"editor.unicodeHighlight.invisibleCharacters": false,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.inlayHints.enabled": "off",
	// -- diff
	"diffEditor.codeLens": true,
	"diffEditor.maxComputationTime": 0,
	"diffEditor.maxFileSize": 0,
	// -- extensions: ms-dotnettools.csharp
	"csharp.suppressHiddenDiagnostics": false,
	"omnisharp.loggingLevel": "information",
	"omnisharp.enableDecompilationSupport": true,
	"omnisharp.organizeImportsOnFormat": true,
	"dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
	// -- extensions: ms-dotnettools.vscode-dotnet-runtime
	"dotnetAcquisitionExtension.enableTelemetry": false,
	"dotnetAcquisitionExtension.existingDotnetPath": [
		{
			"extensionId": "visualstudiotoolsforunity.vstuc",
			"path": "dotnet"
		},
	],
	// -- extensions: ms-vscode.cpptools
	"C_Cpp.default.cStandard": "c99",
	"C_Cpp.default.cppStandard": "c++11",
	"C_Cpp.default.compilerPath": "clang",
	"C_Cpp.default.intelliSenseMode": "clang-x64",
	// "C_Cpp.default.compilerPath": "C:/Program Files (x86)/Microsoft Visual Studio/2019/Community/VC/Tools/MSVC/14.29.30133/bin/Hostx64/x64/cl",
	// "C_Cpp.default.compilerPath": "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/MSVC/14.34.31933/bin/Hostx64/x64/cl",
	// "C_Cpp.default.intelliSenseMode": "msvc-x64",
	"C_Cpp.formatting": "disabled",
	"C_Cpp.autoAddFileAssociations": false,
	"C_Cpp.preferredPathSeparator": "Forward Slash",
	"C_Cpp.errorSquiggles": "disabled",
	"C_Cpp.intelliSenseEngine": "default",
	"C_Cpp.intelliSenseEngineFallback": "enabled",
	"C_Cpp.intelliSenseCacheSize": 0,
	"C_Cpp.intelliSenseMemoryLimit": 256,
	// -- extensions: llvm-vs-code-extensions.vscode-clangd
	"clangd.path": "clangd",
	"clangd.arguments": [
		"--compile-commands-dir=${workspaceFolder}",
		"--header-insertion=never",
	],
	"clangd.onConfigChanged": "restart",
	// -- extensions: geequlim.godot-tools
	"godot_tools.editor_path": "godot",
	"godot_tools.gdscript_lsp_server_port": 6005,
	// -- extensions: ziglang.vscode-zig
	"zig.zigPath": "",
	"zig.zls.enabled": true,
	"zig.zls.path": "zls.exe",
	"zig.checkForUpdate": false,
	"zig.zls.checkForUpdate": false,
}
