// %appdata%/Code/User
[
	// unbind defaults
	{ "key": "ctrl+m", "command": "-workbench.action.toggleTabsVisibility", },
	{ "key": "ctrl+up", "command": "-scrollLineUp", },
	{ "key": "ctrl+down", "command": "-scrollLineDown", },
	{ "key": "alt+pageup", "command": "-scrollPageUp", },
	{ "key": "alt+pagedown", "command": "-scrollPageDown", },
	// utilities
	{
		"key": "ctrl+shift+r",
		"command": "workbench.view.extension.references-view"
	},
	{
		"key": "ctrl+alt+t",
		"command": "workbench.action.toggleTabsVisibility"
	},
	{
		"key": "ctrl+alt+\\",
		"command": "workbench.action.splitEditorDown"
	},
	{
		"key": "shift+f11",
		"command": "workbench.action.toggleZenMode"
	},
	// RMB
	{
		"key": "ctrl+,",
		"command": "editor.action.showContextMenu",
		"when": "textInputFocus"
	},
	// scroll editor
	{
		"key": "ctrl+up",
		"command": "editorScroll",
		"when": "editorTextFocus",
		"args": {"to": "up", "by": "line", "revealCursor": true}
	},
	{
		"key": "ctrl+down",
		"command": "editorScroll",
		"when": "editorTextFocus",
		"args": {"to": "down", "by": "line", "revealCursor": true}
	},
	{
		"key": "alt+pageup",
		"command": "editorScroll",
		"when": "editorTextFocus",
		"args": {"to": "up", "by": "page", "revealCursor": true}
	},
	{
		"key": "alt+pagedown",
		"command": "editorScroll",
		"when": "editorTextFocus",
		"args": {"to": "down", "by": "page", "revealCursor": true}
	},
	// historical navigation
	{
		"key": "ctrl+alt+left",
		"command": "workbench.action.navigateBack"
	},
	{
		"key": "ctrl+alt+right",
		"command": "workbench.action.navigateForward"
	},
	// contextual navigation
	{
		"key": "alt+]",
		"command": "editor.action.marker.nextInFiles",
		"when": "editorFocus"
	},
	{
		"key": "alt+[",
		"command": "editor.action.marker.prevInFiles",
		"when": "editorFocus"
	},
	{
		"key": "alt+]",
		"command": "search.action.focusNextSearchResult",
		"when": "hasSearchResult || inSearchEditor"
	},
	{
		"key": "alt+[",
		"command": "search.action.focusPreviousSearchResult",
		"when": "hasSearchResult || inSearchEditor"
	},
	{
		"key": "alt+]",
		"command": "references-view.next",
		"when": "reference-list.hasResult && references-view.canNavigate"
	},
	{
		"key": "alt+[",
		"command": "references-view.prev",
		"when": "reference-list.hasResult && references-view.canNavigate"
	},
	{
		"key": "alt+[",
		"command": "goToPreviousReference",
		"when": "inReferenceSearchEditor || referenceSearchVisible"
	},
	{
		"key": "alt+]",
		"command": "goToNextReference",
		"when": "inReferenceSearchEditor || referenceSearchVisible"
	},
	// navigate paragraphs
	{
		"key": "alt+up",
		"command": "cursorMove",
		"when": "editorTextFocus",
		"args": {"to": "prevBlankLine"}
	},
	{
		"key": "alt+down",
		"command": "cursorMove",
		"when": "editorTextFocus",
		"args": {"to": "nextBlankLine"}
	},
	{
		"key": "alt+shift+up",
		"command": "cursorMove",
		"when": "editorTextFocus",
		"args": {"to": "prevBlankLine", "select": true}
	},
	{
		"key": "alt+shift+down",
		"command": "cursorMove",
		"when": "editorTextFocus",
		"args": {"to": "nextBlankLine", "select": true}
	},
	// navigate words
	// -- default
	// navigate word parts
	{
		"key": "alt+left",
		"command": "cursorWordPartLeft",
		"when": "editorTextFocus"
	},
	{
		"key": "alt+right",
		"command": "cursorWordPartRight",
		"when": "editorTextFocus"
	},
	{
		"key": "alt+shift+left",
		"command": "cursorWordPartLeftSelect",
		"when": "editorTextFocus",
	},
	{
		"key": "alt+shift+right",
		"command": "cursorWordPartRightSelect",
		"when": "editorTextFocus",
	},
	// navigate brackets
	{
		"key": "ctrl+m",
		"command": "editor.action.jumpToBracket",
		"when": "editorTextFocus"
	},
	{
		"key": "ctrl+shift+m",
		"command": "editor.action.selectToBracket"
	},
	// windowing
	{
		"key": "ctrl+shift+alt+[",
		"command": "workbench.action.closeGroup"
	},
	{
		"key": "ctrl+shift+alt+]",
		"command": "workbench.action.newGroupRight"
	},
	{
		"key": "ctrl+shift+alt+left",
		"command": "workbench.action.moveEditorToLeftGroup"
	},
	{
		"key": "ctrl+shift+alt+right",
		"command": "workbench.action.moveEditorToRightGroup"
	},
	{
		"key": "ctrl+shift+alt+down",
		"command": "workbench.action.moveEditorToBelowGroup"
	},
	{
		"key": "ctrl+shift+alt+up",
		"command": "workbench.action.moveEditorToAboveGroup"
	},
	// edit lines
	{
		"key": "ctrl+shift+backspace",
		"command": "deleteAllLeft",
		"when": "editorTextFocus && !editorReadonly",
	},
	{
		"key": "ctrl+shift+delete",
		"command": "deleteAllRight",
		"when": "editorTextFocus && !editorReadonly"
	},
	{
		"key": "ctrl+shift+down",
		"command": "editor.action.moveLinesDownAction",
		"when": "editorTextFocus && !editorReadonly"
	},
	{
		"command": "editor.action.moveLinesUpAction",
		"key": "ctrl+shift+up",
		"when": "editorTextFocus && !editorReadonly"
	},
]
